<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9AC2E3"
            app:title="User Dashboard"
            app:titleTextColor="@color/black" />

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose the event you need !"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:id="@+id/card1"
                    app:cardBackgroundColor="@color/white">

                    <!-- CardView 1 content -->

                    <ImageView
                        android:id="@+id/cardimage"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/marriage"  />

                    <TextView
                        android:id="@+id/textcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wedding"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="80sp"
                        android:layout_marginLeft="23sp"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <!-- CardView 2 content -->

                    <ImageView
                        android:id="@+id/cardimage2"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/marriage" />

                    <TextView
                        android:id="@+id/textcard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anniversary"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="80sp"
                        android:layout_marginLeft="23sp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <!-- CardView 3 content -->
                    <ImageView
                        android:id="@+id/cardimage3"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/marriage"  />

                    <TextView
                        android:id="@+id/textcard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birthday"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="80sp"
                        android:layout_marginLeft="23sp"/>



                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <!-- CardView 4 content -->

                    <ImageView
                        android:id="@+id/cardimage4"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/marriage"  />

                    <TextView
                        android:id="@+id/textcard4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BachelorParty"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="80sp"
                        android:layout_marginLeft="12sp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <!-- CardView 5 content -->

                    <ImageView
                        android:id="@+id/cardimage5"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/marriage"
                        />

                    <TextView
                        android:id="@+id/textcard5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meeting"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="80sp"
                        android:layout_marginLeft="23sp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card6"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <!-- CardView 6 content -->

                    <ImageView
                        android:id="@+id/cardimage6"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginTop="4sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/marriage"
                        />
                    <TextView
                        android:id="@+id/textcard6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Graduation"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="83sp"
                        android:layout_marginLeft="23sp"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Add more LinearLayouts for additional rows of cards -->

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navmenu"
        app:headerLayout="@layout/header"
        app:itemTextColor="#7A7979" />

</androidx.drawerlayout.widget.DrawerLayout>
